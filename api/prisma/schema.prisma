datasource db {
  provider = "sqlite"
  url      = "file:../.data/db.sqlite3"
}

generator client {
  binaryTargets = env("PRISMA_BINARY_TARGET")
  provider      = "prisma-client-js"
  output        = "./client"
}

model Figure {
  id       Int    @id @default(autoincrement())
  publicId String @unique()
  slug     String @unique()
  name     String
  birthday String
  country  String

  movieFigure movie_figure[]
}

model movie_figure {
  movieId  Int
  figureId Int
  role     String

  movie  Movie  @relation(fields: [movieId], references: [id])
  figure Figure @relation(fields: [figureId], references: [id])

  @@id([movieId, figureId, role])
}

model Movie {
  id         Int     @id @default(autoincrement())
  publicId   String  @unique()
  name       String
  slug       String  @unique()
  releasedIn String
  story      String
  avgScore   Decimal

  userReviews UserReview[]
  movieFigure movie_figure[]
  movieImage  movie_image[]
}

model movie_image {
  movieId      Int
  cloudImageId Int
  role         String

  movie Movie      @relation(fields: [movieId], references: [id])
  image CloudImage @relation(fields: [cloudImageId], references: [id])

  @@id([movieId, cloudImageId])
}

model CloudImage {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique()
  alt       String
  AR        Decimal
  createdAt DateTime @default(now())

  movieImage movie_image[]
}

model UserReview {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique()
  movieId   Int
  userId    Int
  score     Decimal
  text      String
  createdAt DateTime @default(now())

  movie Movie @relation(fields: movieId, references: id)
  user  User  @relation(fields: userId, references: id)

  @@unique([movieId, userId])
  @@index(movieId)
  @@index(userId)
}

model User {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique()
  username  String   @unique()
  createdAt DateTime @default(now())

  userReviews UserReview[]
}
